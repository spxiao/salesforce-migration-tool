script(type='text/javascript',src="/js/sfconn/sfconnform.js")

#sfconnform.modal.fade(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
  .modal-dialog(style="width:530px;margin-top:120px;")
    .modal-content
      .modal-header
        button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
        h4.modal-title Organization 
      .modal-body
        form.form-horizontal(role="form")
          .form-group  
            label.col-sm-4.col-md-4.control-label Name 
            .col-sm-8.col-md-8
              input.form-control(type="text",placeholder="Name",name="orgName") #{sfconn.orgName}
          .form-group  
            label.col-sm-4.col-md-4.control-label User 
            .col-sm-8.col-md-8
              input.form-control(type="text",placeholder="example@yourmail.com",name="userName") #{sfconn.userName}
          .form-group  
            label.col-sm-4.col-md-4.control-label Password  
            .col-sm-8.col-md-8
              input.form-control(type="password",placeholder="password",name="password") #{sfconn.password}
          .form-group  
            label.col-sm-4.col-md-4.control-label Security Token  
            .col-sm-8.col-md-8
              input.form-control(type="password",placeholder="token",name="securityToken") #{sfconn.securityToken}
          .form-group
            label.col-sm-4.col-md-4.control-label Environment
            if sfconn
              .col-sm-3.col-md-3
                a.btn.btn-info.btn-sm
                  if sfconn.orgType == 'Production'
                    i.icon-check(style="margin-right:6px;") 
                    span #{single_select_choose1}
                  else 
                    i.icon-check-empty(style="margin-right:6px;") 
                    span #{single_select_choose1}
              .col-sm-3.col-md-3
                a.btn.btn-info.btn-sm
                  if sfconn.orgType == 'Sandbox'
                    i.icon-check(style="margin-right:6px;") 
                    span #{single_select_choose2}
                  else 
                    i.icon-check-empty(style="margin-right:6px;") 
                    span #{single_select_choose2}
            else 
              .col-sm-3.col-md-3
                a.btn.btn-info.btn-sm
                  i.icon-check(style="margin-right:6px;")
                  span #{single_select_choose1}
              .col-sm-3.col-md-3
                a.btn.btn-info.btn-sm
                  i.icon-check-empty(style="margin-right:6px;")
                  span #{single_select_choose2}
          if changeSet
            .form-group
              .col-sm-offset-4.col-md-offset-4.col-sm-8.col-md-8
                .checkbox
                  label
                    | Remember me
                    input(type="checkbox",name="isSave") 
          .form-group
            .alert.alert-danger(style="display:none;")
          .form-group(style="text-align:right;margin-right:30px;")
            a.btn.btn-primary.btn-sm Submit
            i.icon-spinner.icon-spin.icon-2x(style="display:none;")
            input#acc_id(type="hidden")